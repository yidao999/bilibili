<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_80"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/live_home_follow_anchor"
            android:layout_width="@dimen/live_entrance_image_size"
            android:layout_height="@dimen/live_entrance_image_size"
            android:layout_marginTop="@dimen/default_general_margin" />

        <TextView
            android:text="@string/focus_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_tiny_margin"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/default_small_text_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/live_home_live_center"
            android:layout_width="@dimen/live_entrance_image_size"
            android:layout_height="@dimen/live_entrance_image_size"
            android:layout_marginTop="@dimen/default_general_margin" />

        <TextView
            android:text="@string/live_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_tiny_margin"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/default_small_text_size" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/live_home_search_room"
            android:layout_width="@dimen/live_entrance_image_size"
            android:layout_height="@dimen/live_entrance_image_size"
            android:layout_marginTop="@dimen/default_general_margin" />

        <TextView
            android:text="@string/search_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_tiny_margin"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/default_small_text_size" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/live_home_all_category"
            android:layout_width="@dimen/live_entrance_image_size"
            android:layout_height="@dimen/live_entrance_image_size"
            android:layout_marginTop="@dimen/default_general_margin" />

        <TextView
            android:text="@string/all_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_tiny_margin"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/default_small_text_size" />
    </LinearLayout>

</LinearLayout>